<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gokhan.gezirehberim.Kayitol">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/signup" />

    <EditText
        android:id="@+id/userMail"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"

        android:drawableLeft="@drawable/mail"
        android:fontFamily="casual"


        android:hint="Mail"
        android:inputType="textPersonName"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/userMail"
        android:layout_below="@+id/userMail"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="19dp"
        android:drawableLeft="@drawable/ic_action_name_lock"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:textSize="22sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/hesapOlustur"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/userPassword"
        android:layout_below="@+id/userPassword"
        android:layout_marginTop="19dp"
        android:onClick="hesap_olustur"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/hesapOlustur">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="casual"
                android:text="Hesap Oluştur"
                android:textSize="22sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
