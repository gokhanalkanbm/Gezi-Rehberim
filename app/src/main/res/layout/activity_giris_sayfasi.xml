<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gokhan.gezirehberim.GirisSayfasi">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        app:srcCompat="@drawable/logo2" />

    <EditText
        android:id="@+id/kullaniciAdi"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_above="@+id/kullaniciSifre"
        android:layout_alignStart="@+id/kullaniciSifre"
        android:layout_marginBottom="60dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/mail"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Mail"
        android:inputType="textPersonName"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/kullaniciSifre"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_above="@+id/girisYap"
        android:layout_alignEnd="@+id/girisYap"
        android:layout_marginBottom="26dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_action_name_lock"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:textSize="22sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/girisYap"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_above="@+id/kayitOl"
        android:layout_alignStart="@+id/kayitOl"
        android:layout_marginBottom="34dp"
        android:onClick="giris_yap"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        tools:ignore="OnClick">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="114dp"
                android:fontFamily="casual"
                android:text="Giriş Yap"
                android:textSize="22dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/kayitOl"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:onClick="kayit_ol"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/kayitOl"
            android:layout_alignStart="@+id/kayitOl"
            android:layout_marginBottom="25dp">

        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="30dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="115dp"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="Kayıt ol"
            android:textSize="22dp" />

    </android.support.v7.widget.CardView>


</RelativeLayout>
